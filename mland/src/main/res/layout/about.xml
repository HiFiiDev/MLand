<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slightly_off_white"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/slightly_off_white"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <com.google.samples.apps.iosched.ui.widget.ObservableScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/slightly_off_white"
            android:fillViewport="false"
            android:fitsSystemWindows="false"
            android:overScrollMode="never">

            <FrameLayout
                android:id="@+id/scroll_view_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/slightly_off_white"
                android:clipChildren="false"
                fresco:ignore="ExtraText">

                <!-- Background photo. -->
                <FrameLayout
                    android:id="@+id/session_photo_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="false">

                    <ImageView
                        android:id="@+id/session_photo"
                        android:layout_width="match_parent"
                        android:layout_height="260.0dip"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        customfontdemo:srcCompat="@drawable/test"
                        fresco:ignore="ContentDescription" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/slightly_off_white"
                    android:clipToPadding="false"
                    android:fitsSystemWindows="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="1400dp"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <com.kyler.mland.egg.ui.MLandTextView
                        android:id="@+id/idk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="150dp"
                        android:text="Hi Telegram. :o"
                        android:textColor="@color/navdrawer_item_text_color"
                        android:textSize="26.0sp"
                        customfontdemo:fontName="LyftPro-Bold.ttf" />

                    <com.kyler.mland.egg.ui.MLandTextView
                        android:id="@+id/currentVersionNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/navdrawer_item_text_color"
                        android:textSize="22.0sp"
                        customfontdemo:fontName="UberMoveText-Medium.ttf" />

                </LinearLayout>

                <!-- Title/subtitle bar (floating; position determined at run time as the content view scrolls) -->
                <LinearLayout
                    android:id="@+id/header_session"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:background="@color/colorPrimaryDark"
                    android:clipChildren="false"
                    android:fitsSystemWindows="false"
                    android:orientation="vertical">

                </LinearLayout>

                !-- FAB -->

                <include layout="@layout/include_add_schedule_fab" />

            </FrameLayout>
        </com.google.samples.apps.iosched.ui.widget.ObservableScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/md_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false">

        <include layout="@layout/toolbar_actionbar_transparent" />

    </RelativeLayout>

    <!-- Nav drawer -->
    <include layout="@layout/mland_base" />
</android.support.v4.widget.DrawerLayout>
