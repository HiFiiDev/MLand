    <style name="Theme.MLand.Splash" parent="@android:style/Theme.Material.Light">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor" tools:ignore="PrivateResource">
            @color/background_material_light
        </item>
        <item name="android:statusBarColor" tools:ignore="PrivateResource">
            @color/background_material_light
        </item>
    </style>

    <style name="Theme.MLand.Home" parent="@style/Theme">
